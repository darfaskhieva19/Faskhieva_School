<Window x:Class="Faskhieva_School.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Faskhieva_School"
        mc:Ignorable="d"
        Title="SchoolOfLanguages" Height="800" Width="1250" Icon="\resource/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="\resource\school_logo.png" Width="105" Margin="5 5 5 0"/>
            <TextBlock Text="Школа иностранных языков" Style="{StaticResource txtHeader}"/>
        </StackPanel>
        
        <Frame Name="mainF" Grid.Row="1" NavigationUIVisibility="Hidden">
            
        </Frame>
        
    </Grid>
</Window>
